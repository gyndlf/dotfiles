[user]
	name = gyndlf
	email = james@zingel.co.nz
[core]
	autocrlf = input
	excludesfile = ~/.gitignore_global
	editor = nvim
[commit]
	template = ~/.stCommitMsg
[merge]
	tool = vimdiff
	conflictstyle = diff3
[alias]
    s = status
    a = add
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[github]
	user = gyndlf
